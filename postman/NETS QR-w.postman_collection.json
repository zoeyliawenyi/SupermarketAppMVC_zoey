        {
          "listen": "test",
          "script": {
            "exec": [
              "const text = pm.response.text();",
              "const match = text.match(/Transaction ref:\\s*<strong>([^<]+)<\\/strong>/i);",
              "if (match && match[1]) { pm.environment.set('netsRequestId', match[1]); }"
            ],
            "type": "text/javascript"
          }
        }
