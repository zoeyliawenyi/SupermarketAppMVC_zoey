<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ZozoMart | Refund Detail</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap');
    body { font-family:'Poppins',sans-serif; margin:0; background:#f6f7fb; color:#111827; }
    .shell { max-width: 1100px; margin: 0 auto; padding: 24px; }
    .nav { display:flex; align-items:center; justify-content:space-between; background:#fff; border:1px solid #e5e7eb; border-radius:12px; padding:10px 14px; box-shadow:0 10px 30px rgba(0,0,0,0.08); }
    .brand { display:flex; align-items:center; gap:10px; font-weight:700; }
    .brand .dot { width:12px; height:12px; border-radius:50%; background: linear-gradient(135deg,#ff5c8a,#ff8fb1); }
    .nav-links { display:flex; gap:12px; align-items:center; flex-wrap:wrap; }
    .nav-links a { padding:8px 14px; border-radius:10px; color:#111827; font-weight:500; text-decoration:none; }
    .nav-links a:hover { background: rgba(255,92,138,0.12); }
    .cart-link { position: relative; }
    .cart-badge { display:inline-flex; align-items:center; justify-content:center; min-width:20px; height:20px; padding:0 6px; border-radius:999px; background:#ff5c8a; color:#fff; font-size:12px; margin-left:6px; }
    .user-menu { position: relative; }
    .user-menu summary { list-style:none; cursor:pointer; padding:8px 12px; border-radius:10px; }
    .user-menu[open] summary, .user-menu summary:hover { background: rgba(255,92,138,0.12); }
    .user-menu .dropdown { position:absolute; right:0; top:110%; background:#fff; border:1px solid #e5e7eb; border-radius:10px; box-shadow:0 10px 30px rgba(0,0,0,0.08); min-width:140px; padding:8px 0; z-index:20; }
    .user-menu .dropdown a { display:block; padding:8px 12px; color:#111827; text-decoration:none; }
    .user-menu .dropdown a:hover { background: rgba(255,92,138,0.12); }
    .card { background:#fff; border-radius:16px; padding:24px; box-shadow:0 10px 30px rgba(0,0,0,0.08); margin-top:20px; }
    table { width:100%; border-collapse: collapse; }
    th, td { text-align:left; padding:10px; border-bottom:1px solid #e5e7eb; }
    .pill { padding:4px 10px; border-radius:999px; font-size:12px; font-weight:600; background:#f3f4f6; }
    .pill.requested { background:#fde68a; }
    .pill.approved { background:#bbf7d0; }
    .pill.initiated { background:#bfdbfe; }
    .pill.completed { background:#d1fae5; }
    .pill.rejected { background:#fecaca; }
    .pill.failed { background:#fecaca; }
    .pill.manual_review { background:#e5e7eb; }
  </style>
</head>
<body>
  <div class="shell">
    <%- include('partials/nav') %>

    <div class="card">
      <h2>Refund #<%= refund.id %></h2>
      <%
        const requestedTotal = (items || []).reduce((sum, it) => sum + (Number(it.qtyRequested || 0) * Number(it.unitPrice || 0)), 0);
        const approvedTotal = (items || []).reduce((sum, it) => sum + Number(it.lineRefundAmount || 0), 0);
        const orderTotal = Number(refund.orderTotal || 0);
        const baseAmount = approvedTotal > 0 ? approvedTotal : requestedTotal;
        const mode = refund.refundType
          ? (refund.refundType === 'full_refund' ? 'Full' : 'Partial')
          : (orderTotal > 0 && baseAmount >= (orderTotal - 0.01) ? 'Full' : 'Partial');
        const reasonKey = (refund.refundType === 'cancellation_refund') ? 'cancellation' : (refund.reason || '').toLowerCase();
        const reasonLabels = { cancellation:'Cancellation', missing_item:'Missing item', wrong_item:'Wrong item', damaged:'Damaged', spoiled:'Spoiled', expired:'Expired', late_delivery:'Late delivery', pricing_promo_issue:'Pricing/promo issue', changed_mind:'Changed mind', other:'Other' };
        const reasonLabel = reasonLabels[reasonKey] || (refund.reason || 'Other');
      %>
      <p>Status: <span class="pill <%= refund.status %>"><%= refund.status %></span></p>
      <p>Mode: <%= mode %></p>
      <p>Reason: <%= reasonLabel %></p>
      <% if (refund.note) { %>
        <p>Details: <%= refund.note %></p>
      <% } %>
      <p>Refund method: <%= refund.paymentMethod || 'original' %> (original)</p>
      <% if (refund.rejectionReason) { %>
        <p style="color:#b91c1c;">Rejection reason: <%= refund.rejectionReason %></p>
      <% } %>
      <% if (refund.adminNote) { %>
        <p>Admin note: <%= refund.adminNote %></p>
      <% } %>
      <div style="margin-top:10px;">
        <strong>Evidence</strong>
        <% if (evidence && evidence.length) { %>
          <div style="display:flex; gap:10px; flex-wrap:wrap; margin-top:8px;">
            <% evidence.forEach(function(p){ %>
              <% const lower = (p || '').toLowerCase(); %>
              <% if (lower.endsWith('.pdf')) { %>
                <a href="/<%= p %>" target="_blank" style="display:flex; align-items:center; justify-content:center; width:80px; height:80px; border-radius:10px; border:1px solid #e5e7eb; background:#f3f4f6; font-size:12px; font-weight:600; color:#374151;">PDF</a>
              <% } else { %>
                <a href="/<%= p %>" target="_blank">
                  <img src="/<%= p %>" alt="evidence" style="width:80px; height:80px; object-fit:cover; border-radius:10px; border:1px solid #e5e7eb;">
                </a>
              <% } %>
            <% }) %>
          </div>
        <% } else { %>
          <p class="muted" style="margin-top:6px;">No evidence provided.</p>
        <% } %>
      </div>
    </div>

    <div class="card">
      <h3>Items</h3>
      <table>
        <thead>
          <tr>
            <th>Item</th>
            <th>Requested</th>
            <th>Approved</th>
            <th>Unit Price</th>
            <th>Line Refund</th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(it => { %>
            <tr>
              <td><%= it.productName %></td>
              <td><%= it.qtyRequested %></td>
              <td><%= it.qtyApproved %></td>
              <td>$<%= Number(it.unitPrice || 0).toFixed(2) %></td>
              <td>$<%= Number(it.lineRefundAmount || 0).toFixed(2) %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="card">
      <h3>Transaction</h3>
      <% const statusKey = (refund.status || '').toLowerCase(); %>
      <% if (transaction) { %>
        <p>Provider: <%= transaction.provider %></p>
        <p>Status: <%= transaction.txnStatus %></p>
        <p>Amount: $<%= Number(transaction.amount || 0).toFixed(2) %></p>
      <% } else if (statusKey === 'rejected') { %>
        <p>No refund issued.</p>
      <% } else { %>
        <p>No refund transaction initiated yet.</p>
      <% } %>
    </div>
  </div>
</body>
</html>

