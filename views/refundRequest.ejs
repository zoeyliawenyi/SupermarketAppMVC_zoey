<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ZozoMart | Request Refund</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap');
    body { font-family:'Poppins',sans-serif; margin:0; background:#f6f7fb; color:#111827; }
    .shell { max-width: 1100px; margin: 0 auto; padding: 24px; }
    .nav { display:flex; align-items:center; justify-content:space-between; background:#fff; border:1px solid #e5e7eb; border-radius:12px; padding:10px 14px; box-shadow:0 10px 30px rgba(0,0,0,0.08); }
    .brand { display:flex; align-items:center; gap:10px; font-weight:700; }
    .brand .dot { width:12px; height:12px; border-radius:50%; background: linear-gradient(135deg,#ff5c8a,#ff8fb1); }
    .nav-links { display:flex; gap:12px; align-items:center; flex-wrap:wrap; }
    .nav-links a { padding:8px 14px; border-radius:10px; color:#111827; font-weight:500; text-decoration:none; }
    .nav-links a:hover { background: rgba(255,92,138,0.12); }
    .cart-link { position: relative; }
    .cart-badge { display:inline-flex; align-items:center; justify-content:center; min-width:20px; height:20px; padding:0 6px; border-radius:999px; background:#ff5c8a; color:#fff; font-size:12px; margin-left:6px; }
    .user-menu { position: relative; }
    .user-menu summary { list-style:none; cursor:pointer; padding:8px 12px; border-radius:10px; }
    .user-menu[open] summary, .user-menu summary:hover { background: rgba(255,92,138,0.12); }
    .user-menu .dropdown { position:absolute; right:0; top:110%; background:#fff; border:1px solid #e5e7eb; border-radius:10px; box-shadow:0 10px 30px rgba(0,0,0,0.08); min-width:140px; padding:8px 0; z-index:20; }
    .user-menu .dropdown a { display:block; padding:8px 12px; color:#111827; text-decoration:none; }
    .user-menu .dropdown a:hover { background: rgba(255,92,138,0.12); }
    .card { background:#fff; border-radius:16px; padding:24px; box-shadow:0 10px 30px rgba(0,0,0,0.08); margin-top:20px; }
    table { width:100%; border-collapse: collapse; }
    th, td { text-align:left; padding:10px; border-bottom:1px solid #e5e7eb; }
    .input, select, textarea { width:100%; padding:10px; border-radius:8px; border:1px solid #e5e7eb; }
    .btn { padding:12px 16px; border-radius:12px; border:none; background:linear-gradient(135deg,#ff5c8a,#ff8fb1); color:#fff; font-weight:600; cursor:pointer; }
  </style>
</head>
<body>
  <div class="shell">
    <%- include('partials/nav') %>

    <div class="card">
      <h2>Refund Request for Order #<%= order.id %></h2>
      <form method="POST" action="/refunds/request" enctype="multipart/form-data">
        <input type="hidden" name="orderId" value="<%= order.id %>">
        <div style="display:grid; gap:12px; margin-bottom:16px;">
          <div>
            <label>Refund mode</label>
            <select name="refundType">
              <option value="partial_refund">Partial refund</option>
              <option value="full_refund">Full refund</option>
            </select>
            <div class="muted" id="refundModeHint" style="margin-top:6px; font-size:12px;">
              Partial refund lets you choose quantities per item.
            </div>
          </div>
          <div>
            <label>Refund method</label>
            <div class="input" style="background:#f9fafb;"><%= order.paymentMethod || 'Original payment method' %> (original)</div>
          </div>
          <div>
            <label>Reason</label>
            <select name="reason" required>
              <option value="missing_item">Missing item</option>
              <option value="wrong_item">Wrong item</option>
              <option value="damaged">Damaged</option>
              <option value="late_delivery">Late delivery</option>
              <option value="changed_mind">Changed mind</option>
              <option value="other">Other</option>
            </select>
          </div>
          <div id="noteWrap">
            <label>Additional note</label>
            <textarea class="input" name="note" rows="3" placeholder="Provide details if you selected Other."></textarea>
            <div class="muted" id="noteRequiredHint" style="margin-top:6px; font-size:12px; display:none;">
              Note is required when reason is "Other".
            </div>
          </div>
          <div>
            <label>Evidence files (optional, up to 3)</label>
            <input class="input" type="file" name="evidenceImages" accept="image/jpeg,image/png,image/webp,application/pdf" multiple>
            <div class="muted" style="margin-top:6px; font-size:12px;">Max 2MB each. JPG/PNG/WEBP/PDF only.</div>
          </div>
        </div>

        <h3>Select items</h3>
        <table>
          <thead>
            <tr>
              <th>Item</th>
              <th>Purchased Qty</th>
              <th>Remaining Refundable</th>
              <th>Qty to Refund</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach(it => { %>
              <tr>
                <td><%= it.productName %></td>
                <td><%= it.quantity %></td>
                <td><%= it.remainingQty %></td>
                <td style="max-width:120px;">
                  <input class="input qty-input" type="number" min="0" max="<%= it.remainingQty %>" data-remaining="<%= it.remainingQty %>" name="qty_<%= it.id %>" value="0">
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
        <div style="margin-top:16px;">
          <button class="btn" type="submit">Submit refund request</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    (function () {
      const refundType = document.querySelector('select[name="refundType"]');
      const reason = document.querySelector('select[name="reason"]');
      const note = document.querySelector('textarea[name="note"]');
      const noteHint = document.getElementById('noteRequiredHint');
      const modeHint = document.getElementById('refundModeHint');
      const qtyInputs = Array.from(document.querySelectorAll('.qty-input'));

      function applyMode() {
        const isFull = refundType && refundType.value === 'full_refund';
        if (modeHint) {
          modeHint.textContent = isFull
            ? 'Full refund will request all remaining quantities automatically.'
            : 'Partial refund lets you choose quantities per item.';
        }
        qtyInputs.forEach((input) => {
          const remaining = parseInt(input.dataset.remaining || input.max || '0', 10) || 0;
          if (isFull) {
            input.value = remaining;
            input.readOnly = true;
            input.style.background = '#f9fafb';
          } else {
            input.readOnly = false;
            input.style.background = '#fff';
            if (Number(input.value) > remaining) input.value = remaining;
          }
        });
      }

      function applyReason() {
        const isOther = reason && reason.value === 'other';
        if (note) note.required = isOther;
        if (noteHint) noteHint.style.display = isOther ? 'block' : 'none';
      }

      if (refundType) refundType.addEventListener('change', applyMode);
      if (reason) reason.addEventListener('change', applyReason);

      applyMode();
      applyReason();
    })();
  </script>
</body>
</html>

