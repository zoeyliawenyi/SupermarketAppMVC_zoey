<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ZozoMart | Product</title>
  <style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap');

:root {
    --bg: #ffffff;
    --panel: #f7f8fc;
    --card: #ffffff;
    --accent: #ff5c8a;
    --accent-2: #ff8fb1;
    --text: #1f2430;
    --muted: #6b7280;
    --border: #e5e7eb;
    --shadow: 0 12px 30px rgba(17, 24, 39, 0.08);
    --radius: 16px;
}

* { box-sizing: border-box; }

body {
    margin: 0;
    font-family: 'Poppins', sans-serif;
    background: radial-gradient(circle at 20% 20%, rgba(255, 92, 138, 0.08), transparent 35%), radial-gradient(circle at 80% 10%, rgba(255, 143, 177, 0.12), transparent 32%), linear-gradient(135deg, #ffffff, #fdf3f7 45%, #ffffff);
    color: var(--text);
    min-height: 100vh;
}

a { color: var(--accent); text-decoration: none; }
a:hover { color: #ff3d77; }

.shell {
    max-width: 1200px;
    margin: 0 auto;
    padding: 24px;
}

.nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #ffffff;
    backdrop-filter: blur(8px);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 12px 18px;
    box-shadow: var(--shadow);
    position: sticky;
    top: 18px;
    z-index: 10;
}

.brand {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 700;
    font-size: 18px;
    letter-spacing: .5px;
    color: var(--text);
}

.brand .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent), var(--accent-2));
    box-shadow: 0 0 10px rgba(255, 92, 138, 0.6);
}

.nav-links {
    display: flex;
    align-items: center;
    gap: 14px;
    flex-wrap: wrap;
}

.nav-links a {
    padding: 8px 14px;
    border-radius: 10px;
    color: var(--text);
    font-weight: 500;
    transition: background 0.2s, color 0.2s, transform 0.2s;
}

.nav-links a:hover {
    background: rgba(255, 92, 138, 0.12);
    color: var(--text);
    transform: translateY(-1px);
}

.pill {
    background: linear-gradient(135deg, var(--accent), var(--accent-2));
    color: #ffffff !important;
    box-shadow: 0 10px 30px rgba(255, 92, 138, 0.35);
}

.hero {
    display: grid;
    grid-template-columns: 1fr;
    gap: 28px;
    margin: 28px 0;
    align-items: center;
}

.hero-card {
    background: #ffffff;
    border: 1px solid var(--border);
    border-radius: calc(var(--radius) + 6px);
    padding: 28px;
    box-shadow: var(--shadow);
}

.eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 12px;
    background: rgba(255, 92, 138, 0.14);
    border-radius: 999px;
    color: var(--text);
    font-size: 13px;
    letter-spacing: .4px;
}

.hero h1 {
    margin: 12px 0 10px;
    font-size: 36px;
    line-height: 1.2;
}

.hero p {
    color: var(--muted);
    margin: 0 0 18px;
}

.cta-row {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    margin-top: 12px;
}

.cta {
    padding: 12px 16px;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
    color: #ffffff;
    background: linear-gradient(135deg, var(--accent), var(--accent-2));
    box-shadow: 0 10px 30px rgba(255, 92, 138, 0.35);
}

.cta.secondary {
    background: transparent;
    color: var(--text);
    border: 1px solid var(--border);
    box-shadow: none;
}

.cta:hover { transform: translateY(-1px); }

.stat-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 16px;
    margin-top: 10px;
}

.stat {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 14px 16px;
    box-shadow: var(--shadow);
}

.stat label { color: var(--muted); font-size: 13px; }
.stat strong { display: block; margin-top: 8px; font-size: 22px; }

.section-head {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: 14px;
}

.section-head h2 {
    margin: 0;
    font-size: 22px;
}

.products {
    margin-top: 18px;
}

.grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 16px;
}

.card {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    box-shadow: var(--shadow);
    transition: transform 0.15s, border-color 0.15s, box-shadow 0.15s;
}

.card:hover {
    transform: translateY(-2px);
    border-color: rgba(255, 92, 138, 0.4);
    box-shadow: 0 16px 36px rgba(255, 92, 138, 0.15);
}

.card img {
    width: 100%;
    height: 160px;
    object-fit: cover;
    border-radius: 12px;
    background: #f3f4f6;
}

.card h3 {
    margin: 0;
    font-size: 17px;
}

.price {
    color: var(--accent);
    font-weight: 700;
    font-size: 18px;
}

.muted { color: var(--muted); font-size: 13px; }

.pill-badge {
    display: inline-flex;
    padding: 6px 10px;
    border-radius: 999px;
    background: rgba(255, 92, 138, 0.1);
    color: var(--accent);
    font-size: 12px;
}

.table-shell {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 16px;
    box-shadow: var(--shadow);
    overflow: hidden;
}

table {
    width: 100%;
    border-collapse: collapse;
    color: var(--text);
}

th, td {
    padding: 12px 10px;
    border-bottom: 1px solid var(--border);
    text-align: left;
}

th { color: var(--muted); font-weight: 600; font-size: 13px; }

.btn-link {
    color: var(--accent);
    font-weight: 600;
}

.inline-form { display: inline; }

.card-actions {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
}

.pill-action {
    padding: 10px 12px;
    border-radius: 10px;
    border: 1px solid var(--border);
    background: rgba(255, 92, 138, 0.08);
    color: var(--text);
    font-weight: 600;
    cursor: pointer;
}

.danger {
    background: rgba(231, 76, 60, 0.12);
    border-color: rgba(231, 76, 60, 0.3);
    color: #d14343;
}

.tag {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 10px;
    background: rgba(255, 92, 138, 0.08);
    border-radius: 10px;
    color: var(--muted);
}

.spacer { height: 16px; }

.select {
    padding: 10px 12px;
    border-radius: 10px;
    border: 1px solid var(--border);
    background: #ffffff;
    color: var(--text);
    font-weight: 600;
}

.cart-link {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 6px;
}

.cart-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 20px;
    height: 20px;
    padding: 2px 6px;
    border-radius: 999px;
    background: #16804a;
    color: #fff;
    font-size: 12px;
    font-weight: 700;
}
.user-menu { position: relative; }
.user-menu summary { list-style: none; cursor: pointer; padding: 8px 12px; border-radius: 10px; }
.user-menu[open] summary, .user-menu summary:hover { background: rgba(255, 92, 138, 0.12); }
.user-menu .dropdown { position: absolute; right: 0; top: 110%; background: #fff; border: 1px solid var(--border); border-radius: 10px; box-shadow: var(--shadow); min-width: 150px; padding: 8px 0; z-index: 20; }
.user-menu .dropdown a { display: block; padding: 8px 12px; color: var(--text); text-decoration: none; }
.user-menu .dropdown a:hover { background: rgba(255, 92, 138, 0.12); }

.pill-badge.small {
    padding: 6px 10px;
    font-size: 12px;
}

.pill-badge.halal {
    background: rgba(34, 197, 94, 0.15);
    color: #16804a;
    border: 1px solid rgba(34, 197, 94, 0.3);
}

.qty-control {
    display: inline-flex;
    align-items: center;
    border: 1px solid var(--border);
    border-radius: 999px;
    overflow: hidden;
    background: #fff;
}

.qty-btn {
    border: none;
    background: transparent;
    padding: 8px 12px;
    cursor: pointer;
    font-weight: 700;
}

.qty-input {
    width: 48px;
    text-align: center;
    border: none;
    outline: none;
    font-weight: 600;
}

.buy-row {
    display: flex;
    gap: 10px;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 12px;
}

@media (max-width: 900px) {
    .hero { grid-template-columns: 1fr; }
    .nav { position: static; }
}

.single-hero {
    grid-template-columns: 1fr;
}

</style>
</head>
<body>
  <div class="shell">
    <%- include('partials/nav') %>

    <div class="hero-card" style="margin-top:20px;">
      <div class="section-head">
        <h2>Product details</h2>
        <span class="muted">Hi, <%= user.username %> (<%= user.role %>)</span>
      </div>
      <% if (product) { %>
        <%
          const dietLower = (product.dietary || '').toLowerCase();
          const badgeClass = dietLower === 'halal' ? 'pill-badge small halal' : 'pill-badge small';
          const maxQty = Math.min(5, product.quantity || product.stock || 5);
          const ratingRounded = Math.round(product.avgRating || 0);
        %>
        <div style="display:grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap:18px; align-items:start;">
          <div>
            <img src="/images/<%= product.image %>" alt="<%= product.productName %>" style="width:100%; max-width:360px; border-radius:14px; border:1px solid var(--border);">
          </div>
          <div>
            <div style="display:flex; align-items:center; gap:10px; flex-wrap:wrap;">
              <h3 style="margin:0;"><%= product.productName %></h3>
              <% if (product.category) { %><span class="pill-badge small"><%= product.category %></span><% } %>
              <% if (product.dietary) { %><span class="<%= badgeClass %>"><%= product.dietary %></span><% } %>
            </div>
            <div class="muted" style="margin-top:8px;">Category: <strong><%= product.category || '-' %></strong></div>
            <div class="muted" style="margin-top:4px;">Dietary: <strong style="color:<%= dietLower === 'halal' ? '#16804a' : 'inherit' %>;"><%= product.dietary || '-' %></strong></div>
            <div class="muted" style="margin-top:4px; display:flex; gap:6px; align-items:center;">
              <% for (let s = 1; s <= 5; s++) { %>
                <span style="color:#fbbf24; font-size:16px;"><%= s <= ratingRounded ? '★' : '☆' %></span>
              <% } %>
              <span style="font-size:12px; color:var(--muted);"><%= product.reviewCount || 0 %> review(s)</span>
            </div>
            <p style="margin-top:10px;"><%= product.description || 'No description available.' %></p>
            <p class="price" style="margin-top:8px;">$ <%= Number(product.price).toFixed(2) %></p>
            <form action="/add-to-cart/<%= product.id %>" method="POST" class="buy-row" data-max="<%= maxQty %>">
              <input type="hidden" name="buy" value="0">
              <div class="qty-control" data-max="<%= maxQty %>">
                <button type="button" class="qty-btn" data-step="-1">-</button>
                <input class="qty-input" type="text" name="quantity" value="1" readonly>
                <button type="button" class="qty-btn" data-step="1">+</button>
              </div>
              <button class="cta secondary" type="submit">Add to cart</button>
              <button class="cta" type="submit" formaction="/add-to-cart/<%= product.id %>?buy=1">Buy</button>
            </form>
          </div>
        </div>
      <% } else { %>
        <p>No product found.</p>
      <% } %>
      <% if (reviews && reviews.length) { %>
        <div class="card" style="margin-top:16px;">
          <h3 style="margin:0 0 8px;">Reviews</h3>
          <% reviews.forEach(function(r){ %>
            <div style="border-bottom:1px solid var(--border); padding:8px 0;">
              <div style="display:flex; justify-content:space-between; align-items:center; gap:8px; flex-wrap:wrap;">
                <strong><%= r.username || ('User #' + r.userId) %></strong>
                <span class="muted"><%= r.created_at ? (r.created_at.toLocaleString ? r.created_at.toLocaleString() : r.created_at) : '' %></span>
              </div>
              <div>
                <% const rr = Math.round(r.rating || 0); %>
                <% for (let s = 1; s <= 5; s++) { %>
                  <span style="color:#fbbf24; font-size:14px;"><%= s <= rr ? '★' : '☆' %></span>
                <% } %>
              </div>
              <div class="muted"><%= r.comment || '' %></div>
              <% if (r.reply) { %>
                <div class="muted" style="margin-top:6px; padding:8px; border:1px solid var(--border); border-radius:10px; background:#f8fafc;">
                  <strong>Admin reply:</strong> <%= r.reply %>
                </div>
              <% } %>
            </div>
          <% }) %>
        </div>
      <% } %>
      <div class="cta-row" style="margin-top:14px;">
        <% if (user.role === 'admin') { %>
          <a class="pill-action" href="/inventory">Back to Inventory</a>
        <% } else { %>
          <a class="pill-action" href="/shopping">Back to Shop</a>
        <% } %>
      </div>
    </div>
  </div>
  <script>
    document.querySelectorAll('.buy-row').forEach(form => {
      const max = parseInt(form.dataset.max || '5', 10);
      const input = form.querySelector('.qty-input');
      form.addEventListener('click', (e) => {
        const btn = e.target.closest('.qty-btn');
        if (!btn) return;
        const step = Number(btn.dataset.step || 0);
        let val = parseInt(input.value || '1', 10);
        val = isNaN(val) ? 1 : val;
        val = Math.min(max, Math.max(1, val + step));
        input.value = val;
      });
    });
  </script>
</body>
</html>




