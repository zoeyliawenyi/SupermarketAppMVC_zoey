<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <script src="https://unpkg.com/event-source-polyfill"></script>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap');
    :root {
      --bg: #fef7f7;
      --card: #fff;
      --text: #1f2430;
      --muted: #6b7280;
      --accent: #ff5c8a;
      --border: 1px solid rgba(17,24,39,0.08);
      --shadow: 0 22px 40px rgba(17,24,39,0.12);
    }
    * { box-sizing: border-box; }
    body {
      margin: 0;
      font-family: 'Poppins', sans-serif;
      background: radial-gradient(circle at 20% 20%, rgba(255,92,138,0.1), transparent 40%), #fff;
      min-height: 100vh;
      color: var(--text);
    }
    .shell {
      max-width: 1100px;
      margin: 0 auto;
      padding: 24px;
    }
    .nav {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 12px 18px;
      border-radius: 999px;
      background: rgba(255,255,255,0.95);
      border: var(--border);
      box-shadow: 0 12px 30px rgba(17,24,39,0.08);
      position: sticky;
      top: 14px;
      z-index: 10;
    }
    .brand { display: flex; align-items: center; gap: 10px; font-weight: 700; }
    .brand .badge { width: 16px; height: 16px; border-radius: 50%; background: linear-gradient(135deg, #ff5c8a, #ff8fb1); }
    .nav-links { display: flex; align-items: center; gap: 12px; }
    .nav-links a { text-decoration: none; color: var(--text); padding: 8px 14px; border-radius: 10px; transition: background 0.2s ease; }
    .nav-links a:hover { background: rgba(255,92,138,0.12); }
    .page-grid { margin-top: 32px; display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 24px; }
    .card {
      background: var(--card);
      border-radius: 24px;
      padding: 32px;
      box-shadow: var(--shadow);
      border: var(--border);
    }
    .qr-wrapper {
      text-align: center;
    }
    .qr-wrapper img {
      max-width: 280px;
      width: 100%;
      border-radius: 18px;
      border: var(--border);
      padding: 12px;
      background: #fff;
      box-shadow: 0 15px 35px rgba(17,24,39,0.12);
    }
    .timer {
      font-weight: 600;
      margin-top: 18px;
      font-size: 18px;
    }
    .status-pill {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 8px 16px;
      border-radius: 999px;
      background: rgba(255,92,138,0.15);
      color: var(--accent);
      font-weight: 600;
      margin-bottom: 12px;
    }
    .info-list {
      list-style: none;
      padding: 0;
      margin: 16px 0;
      display: grid;
      gap: 12px;
    }
    .info-list li {
      display: flex;
      align-items: center;
      gap: 10px;
      font-size: 14px;
      color: var(--muted);
    }
    .info-list li::before {
      content: 'â€¢';
      color: var(--accent);
    }
    .actions {
      margin-top: 24px;
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
      justify-content: center;
    }
    .btn {
      padding: 12px 18px;
      border-radius: 12px;
      border: none;
      cursor: pointer;
      font-weight: 600;
      text-decoration: none;
      color: #fff;
      background: linear-gradient(135deg, #ff5c8a, #ff8fb1);
      box-shadow: 0 12px 25px rgba(255,92,138,0.3);
    }
    .btn.secondary {
      background: #fff;
      border: 1px solid rgba(17,24,39,0.1);
      color: var(--text);
      box-shadow: 0 12px 25px rgba(17,24,39,0.1);
    }
    @media (max-width: 640px) {
      .nav { flex-direction: column; gap: 8px; }
    }
  </style>
</head>
<body>
  <div class="shell">
    <nav class="nav">
      <div class="brand">
        <span class="badge"></span>
        ZozoMart NETS
      </div>
      <div class="nav-links">
        <a href="/shopping">Home</a>
        <a href="/favorites">Favorites</a>
        <a href="/cart">Cart <% if (cartCount > 0) { %><span class="cart-badge"><%= cartCount %></span><% } %></a>
      </div>
    </nav>

    <div class="page-grid">
      <section class="card">
        <div class="status-pill">Scan to pay</div>
        <h1 style="margin-top:0;">Scan your NETS QR</h1>
        <p class="muted">Use the NETS/E-wallet app that supports NETS QR on your phone and scan the code below.</p>
        <div class="qr-wrapper">
          <img src="<%= qrCodeUrl %>" alt="NETS QR code" />
          <p class="timer" id="timer">Time remaining: 5:00</p>
          <div class="info-list">
            <li>Transaction ref: <strong><%= txnRetrievalRef %></strong></li>
            <li>Amount: <strong>$<%= total.toFixed(2) %></strong></li>
            <li>Keep this page open until payment completes.</li>
          </div>
          <div class="actions">
            <a class="btn secondary" href="/cart">Cancel & return</a>
          </div>
        </div>
      </section>
      <section class="card">
        <h3>How it works</h3>
        <ul class="info-list">
          <li>The NETS QR is automatically generated and tied to this order.</li>
          <li>We poll the payment status in the background and redirect you.</li>
          <li>If the timer expires, the session fails over to the fail page.</li>
        </ul>
        <p class="note">Need help? Reach out to support while we monitor the payment.</p>
      </section>
    </div>

    <script>
      let sse;
      const txnRetrievalRef = "<%= txnRetrievalRef %>";
      const timerElement = document.getElementById("timer");
      const duration = 300;
      let remaining = duration;

      function updateTimer() {
        const minutes = Math.floor(remaining / 60);
        const seconds = remaining % 60;
        timerElement.textContent = `Time remaining: ${minutes}:${seconds.toString().padStart(2, "0")}`;
        remaining--;
        if (remaining < 0) {
          clearInterval(intervalId);
          timerElement.textContent = "Transaction timed out.";
          if (sse) sse.close();
          window.location.href = `/nets-qr/fail?txn_retrieval_ref=${txnRetrievalRef}`;
        }
      }

      const intervalId = setInterval(updateTimer, 1000);
      updateTimer();

      function watchPayment() {
        const url = `/sse/payment-status/${txnRetrievalRef}`;
        sse = new EventSourcePolyfill(url, { heartbeatTimeout: 150000 });
        sse.addEventListener("message", (event) => {
          const data = JSON.parse(event.data);
          if (data.success) {
            sse.close();
            window.location.href = `/nets-qr/success?txn_retrieval_ref=${txnRetrievalRef}`;
          } else if (data.fail || data.error) {
            sse.close();
            window.location.href = `/nets-qr/fail?txn_retrieval_ref=${txnRetrievalRef}`;
          }
        });
      }

      watchPayment();
    </script>
  </div>
</body>
</html>
