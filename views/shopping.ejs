<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>ZozoMart | Shop</title>
  <style>
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap');

:root {
    --bg: #ffffff;
    --panel: #f7f8fc;
    --card: #ffffff;
    --accent: #ff5c8a;
    --accent-2: #ff8fb1;
    --text: #1f2430;
    --muted: #6b7280;
    --border: #e5e7eb;
    --shadow: 0 12px 30px rgba(17, 24, 39, 0.08);
    --radius: 16px;
}

* { box-sizing: border-box; }

body {
    margin: 0;
    font-family: 'Poppins', sans-serif;
    background: radial-gradient(circle at 20% 20%, rgba(255, 92, 138, 0.08), transparent 35%), radial-gradient(circle at 80% 10%, rgba(255, 143, 177, 0.12), transparent 32%), linear-gradient(135deg, #ffffff, #fdf3f7 45%, #ffffff);
    color: var(--text);
    min-height: 100vh;
}

a { color: var(--accent); text-decoration: none; }
a:hover { color: #ff3d77; }

.shell {
    max-width: 1200px;
    margin: 0 auto;
    padding: 24px;
}

.nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: #ffffff;
    backdrop-filter: blur(8px);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 12px 18px;
    box-shadow: var(--shadow);
    position: sticky;
    top: 18px;
    z-index: 10;
}

.brand {
    display: flex;
    align-items: center;
    gap: 10px;
    font-weight: 700;
    font-size: 18px;
    letter-spacing: .5px;
    color: var(--text);
}

.brand .dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent), var(--accent-2));
    box-shadow: 0 0 10px rgba(255, 92, 138, 0.6);
}

.nav-links {
    display: flex;
    align-items: center;
    gap: 14px;
    flex-wrap: wrap;
}

.nav-links a {
    padding: 8px 14px;
    border-radius: 10px;
    color: var(--text);
    font-weight: 500;
    transition: background 0.2s, color 0.2s, transform 0.2s;
}

.nav-links a:hover {
    background: rgba(255, 92, 138, 0.12);
    color: var(--text);
    transform: translateY(-1px);
}

.pill {
    background: linear-gradient(135deg, var(--accent), var(--accent-2));
    color: #ffffff !important;
    box-shadow: 0 10px 30px rgba(255, 92, 138, 0.35);
}
.user-menu { position: relative; }
.user-menu summary { list-style: none; cursor: pointer; padding: 8px 12px; border-radius: 10px; }
.user-menu[open] summary, .user-menu summary:hover { background: rgba(255, 92, 138, 0.12); }
.user-menu .dropdown { position: absolute; right: 0; top: 110%; background: #fff; border: 1px solid var(--border); border-radius: 10px; box-shadow: var(--shadow); min-width: 150px; padding: 8px 0; z-index: 20; }
.user-menu .dropdown a { display: block; padding: 8px 12px; color: var(--text); text-decoration: none; }
.user-menu .dropdown a:hover { background: rgba(255, 92, 138, 0.12); }

.hero {
    display: grid;
    grid-template-columns: 1fr;
    gap: 28px;
    margin: 28px 0;
    align-items: center;
}

.hero-card {
    background: #ffffff;
    border: 1px solid var(--border);
    border-radius: calc(var(--radius) + 6px);
    padding: 28px;
    box-shadow: var(--shadow);
}

.eyebrow {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 12px;
    background: rgba(255, 92, 138, 0.14);
    border-radius: 999px;
    color: var(--text);
    font-size: 13px;
    letter-spacing: .4px;
}

.hero h1 {
    margin: 12px 0 10px;
    font-size: 36px;
    line-height: 1.2;
}

.hero p {
    color: var(--muted);
    margin: 0 0 18px;
}

.cta-row {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    margin-top: 12px;
}

.cta {
    padding: 12px 16px;
    border: none;
    border-radius: 12px;
    font-weight: 600;
    cursor: pointer;
    transition: transform 0.2s, box-shadow 0.2s;
    color: #ffffff;
    background: linear-gradient(135deg, var(--accent), var(--accent-2));
    box-shadow: 0 10px 30px rgba(255, 92, 138, 0.35);
}

.cta.secondary {
    background: transparent;
    color: var(--text);
    border: 1px solid var(--border);
    box-shadow: none;
}

.cta:hover { transform: translateY(-1px); }

.stat-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 16px;
    margin-top: 10px;
}

.stat {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 14px 16px;
    box-shadow: var(--shadow);
}

.stat label { color: var(--muted); font-size: 13px; }
.stat strong { display: block; margin-top: 8px; font-size: 22px; }

.section-head {
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    margin-bottom: 14px;
}

.section-head h2 {
    margin: 0;
    font-size: 22px;
}

.products {
    margin-top: 18px;
}

.grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 240px));
    gap: 16px;
    justify-content: start;
}

.card {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 16px;
    display: flex;
    flex-direction: column;
    height: 100%;
    gap: 12px;
    box-shadow: var(--shadow);
    transition: transform 0.15s, border-color 0.15s, box-shadow 0.15s;
    position: relative;
}

.card:hover {
    transform: translateY(-2px);
    border-color: rgba(255, 92, 138, 0.4);
    box-shadow: 0 16px 36px rgba(255, 92, 138, 0.15);
}

.card img {
    width: 100%;
    height: 160px;
    object-fit: cover;
    border-radius: 12px;
    background: #f3f4f6;
}

.card h3 {
    margin: 0;
    font-size: 17px;
}

.price {
    color: var(--accent);
    font-weight: 700;
    font-size: 18px;
}

.muted { color: var(--muted); font-size: 13px; }

.pill-badge {
    display: inline-flex;
    padding: 6px 10px;
    border-radius: 999px;
    background: rgba(255, 92, 138, 0.1);
    color: var(--accent);
    font-size: 12px;
}

.table-shell {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 16px;
    box-shadow: var(--shadow);
    overflow: hidden;
}

table {
    width: 100%;
    border-collapse: collapse;
    color: var(--text);
}

th, td {
    padding: 12px 10px;
    border-bottom: 1px solid var(--border);
    text-align: left;
}

th { color: var(--muted); font-weight: 600; font-size: 13px; }

.btn-link {
    color: var(--accent);
    font-weight: 600;
}

.inline-form { display: inline; }

.card-actions {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
}

.pill-action {
    padding: 10px 12px;
    border-radius: 10px;
    border: 1px solid var(--border);
    background: rgba(255, 92, 138, 0.08);
    color: var(--text);
    font-weight: 600;
    cursor: pointer;
}

.danger {
    background: rgba(231, 76, 60, 0.12);
    border-color: rgba(231, 76, 60, 0.3);
    color: #d14343;
}

.tag {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 10px;
    background: rgba(255, 92, 138, 0.08);
    border-radius: 10px;
    color: var(--muted);
}

.spacer { height: 16px; }

.select {
    padding: 10px 12px;
    border-radius: 10px;
    border: 1px solid var(--border);
    background: #ffffff;
    color: var(--text);
    font-weight: 600;
}

.fav-btn {
    position:absolute;
    top:10px;
    right:10px;
    width:34px;
    height:34px;
    border-radius:50%;
    border:1px solid var(--border);
    background: #fff;
    display:inline-flex;
    align-items:center;
    justify-content:center;
    cursor:pointer;
    box-shadow: var(--shadow);
    transition: transform 0.15s, box-shadow 0.15s, background 0.15s;
}
.fav-btn:hover { transform: translateY(-1px); }
.fav-btn.active { color:#e11d48; border-color: rgba(225,29,72,0.4); background: #ffe4ea; }

.pill-badge.small {
    padding: 6px 10px;
    font-size: 12px;
}

.pill-badge.halal {
    background: rgba(34, 197, 94, 0.15);
    color: #16804a;
    border: 1px solid rgba(34, 197, 94, 0.3);
}

.card-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 8px;
}

.qty-control {
    display: inline-flex;
    align-items: center;
    border: 1px solid var(--border);
    border-radius: 999px;
    overflow: hidden;
    background: #fff;
}

.qty-btn {
    border: none;
    background: transparent;
    padding: 8px 12px;
    cursor: pointer;
    font-weight: 700;
}

.qty-input {
    width: 48px;
    text-align: center;
    border: none;
    outline: none;
    font-weight: 600;
}

.buy-row {
    display: flex;
    gap: 8px;
    align-items: center;
    flex-wrap: wrap;
}

@media (max-width: 900px) {
    .hero { grid-template-columns: 1fr; }
    .nav { position: static; }
}

.single-hero {
    grid-template-columns: 1fr;
}

.filters {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 12px;
    margin: 16px 0;
    align-items: center;
}

.filter-field {
    display: flex;
    align-items: center;
    gap: 8px;
    background: #fff;
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 10px 12px;
    box-shadow: var(--shadow);
}

.filter-field input,
.filter-field select {
    border: none;
    outline: none;
    width: 100%;
    font-size: 14px;
    background: transparent;
}

.filter-label {
    font-weight: 600;
    color: var(--muted);
    font-size: 13px;
}

.reset-btn {
    border: 1px solid var(--border);
    background: #fff;
    border-radius: 12px;
    padding: 10px 14px;
    font-weight: 700;
    cursor: pointer;
    transition: background .2s, transform .2s;
}

.reset-btn:hover { background: rgba(255,92,138,0.08); transform: translateY(-1px); }

.cart-link {
    position: relative;
    display: inline-flex;
    align-items: center;
    gap: 6px;
}

.cart-badge {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 20px;
    height: 20px;
    padding: 2px 6px;
    border-radius: 999px;
    background: #16804a;
    color: #fff;
    font-size: 12px;
    font-weight: 700;
}

/* delete modal */
.modal-mask {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.35);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 50;
}
.modal {
    background: #fff;
    border-radius: 14px;
    padding: 18px;
    box-shadow: var(--shadow);
    max-width: 380px;
    width: 90%;
}
.modal h4 { margin: 0 0 8px; }
.modal p { margin: 0 0 12px; color: var(--muted); }
.modal-actions { display:flex; gap:10px; justify-content:flex-end; flex-wrap:wrap; }
.btn-ghost { border:1px solid var(--border); padding:8px 12px; border-radius:10px; background:#fff; cursor:pointer; font-weight:600; }
.btn-danger { background: linear-gradient(135deg,#f87171,#ef4444); color:#fff; border:none; padding:8px 14px; border-radius:10px; cursor:pointer; font-weight:700; }

</style>
</head>
<body>
  <div class="shell">
    <%- include('partials/userNav', { user, cartCount: cartCount || 0 }) %>

    <div class="hero-card" style="margin-top:20px;">
      <div class="section-head">
        <h2>Welcome back, <%= user.username %>!</h2>
        <span class="muted">Role: <%= user.role %></span>
      </div>
      <p class="muted">Load up your cart with fresh picks. Select a quantity and add to cart in one tap.</p>
    </div>

    <section class="products">
      <div class="section-head">
        <h2>Shop all products</h2>
        <a class="pill-action" href="/cart">Go to cart</a>
      </div>
      <% const categories = Array.from(new Set((products || []).map(p => p.category).filter(Boolean))); %>
      <% const diets = Array.from(new Set((products || []).map(p => p.dietary).filter(Boolean))); %>
      <div class="filters">
        <div>
          <div class="filter-label">Search</div>
          <div class="filter-field">
            <input id="searchBox" type="text" placeholder="Name" autocomplete="off">
          </div>
        </div>
        <div>
          <div class="filter-label">Category</div>
          <div class="filter-field">
            <select id="categoryFilter">
              <option value="">All categories</option>
              <% categories.forEach(function(c){ %>
                <option value="<%= c %>"><%= c %></option>
              <% }) %>
            </select>
          </div>
        </div>
        <div>
          <div class="filter-label">Dietary</div>
          <div class="filter-field">
            <select id="dietaryFilter">
              <option value="">All dietary</option>
              <% diets.forEach(function(d){ %>
                <option value="<%= d %>"><%= d %></option>
              <% }) %>
            </select>
          </div>
        </div>
        <div>
          <div class="filter-label">Sort</div>
          <div class="filter-field">
            <select id="sortSelect">
              <option value="name-asc">Name A > Z</option>
              <option value="name-desc">Name Z > A</option>
              <option value="price-asc">Price low > high</option>
              <option value="price-desc">Price high > low</option>
            </select>
          </div>
        </div>
        <div style="display:flex;align-items:flex-end;">
          <button class="reset-btn" id="resetFilters" type="button">Reset</button>
        </div>
      </div>
      <div class="grid">
        <% products.forEach(function(p){ %>
          <% const maxQty = Math.min(5, p.stock || p.quantity || 5); %>
          <% const isFav = (favoriteIds || []).includes(p.id); %>
          <form class="card" action="/add-to-cart/<%= p.id %>" method="POST" data-name="<%= (p.productName || '').toLowerCase() %>" data-category="<%= (p.category || '').toLowerCase() %>" data-dietary="<%= (p.dietary || '').toLowerCase() %>" data-price="<%= Number(p.price).toFixed(2) %>">
            <button type="button" class="fav-btn <%= isFav ? 'active' : '' %>" data-product-id="<%= p.id %>" aria-label="Add to favorites">
              ♥
            </button>
            <a href="/product/<%= p.id %>" style="text-decoration:none; color:inherit;">
              <img src="/images/<%= p.image %>" alt="<%= p.productName %>">
            </a>
            <input type="hidden" name="buy" value="0">
            <div class="card-meta">
              <h3 style="margin:0;"><a href="/product/<%= p.id %>" style="color:inherit; text-decoration:none;"><%= p.productName %></a></h3>
              <% if (p.dietary) { %>
                <%
                  const dietLower = (p.dietary || '').toLowerCase();
                  const badgeClass = dietLower === 'halal' ? 'pill-badge small halal' : 'pill-badge small';
                %>
                <span class="<%= badgeClass %>"><%= p.dietary %></span>
              <% } %>
            </div>
            <% if (p.category) { %>
              <div class="muted">Category: <strong><%= p.category %></strong></div>
            <% } %>
            <div class="muted">Available: <strong><%= p.stock != null ? p.stock : (p.quantity || 0) %></strong></div>
            <div class="price">$ <%= Number(p.price).toFixed(2) %></div>
            <div class="muted">
              <% const rating = Math.round(p.avgRating || 0); %>
              <% for (let s = 1; s <= 5; s++) { %>
                <span style="color:#fbbf24; font-size:14px;"><%= s <= rating ? '★' : '☆' %></span>
              <% } %>
              <span style="font-size:12px; color:var(--muted);">(<%= p.reviewCount || 0 %>)</span>
            </div>
            <div class="card-actions buy-row">
              <div class="qty-control" data-max="<%= maxQty %>">
                <button type="button" class="qty-btn" data-step="-1">-</button>
                <input class="qty-input" type="text" name="quantity" value="1" readonly>
                <button type="button" class="qty-btn" data-step="1">+</button>
              </div>
              <button class="cta secondary" type="submit">Add to cart</button>
              <button class="cta" type="submit" formaction="/add-to-cart/<%= p.id %>?buy=1">Buy</button>
            </div>
          </form>
        <% }) %>
      </div>
    </section>
  </div>
</body>
</html>
<script>
  (function(){
    const cards = Array.from(document.querySelectorAll('.grid .card'));
    const searchBox = document.getElementById('searchBox');
    const categoryFilter = document.getElementById('categoryFilter');
    const dietaryFilter = document.getElementById('dietaryFilter');
    const sortSelect = document.getElementById('sortSelect');
    const resetBtn = document.getElementById('resetFilters');

    function applyFilters(){
      const q = (searchBox.value || '').trim().toLowerCase();
      const cat = (categoryFilter.value || '').toLowerCase();
      const diet = (dietaryFilter.value || '').toLowerCase();
      const sort = sortSelect.value;

      let filtered = cards.filter(card => {
        const name = card.dataset.name;
        const category = card.dataset.category;
        const dietary = card.dataset.dietary;

        const matchesSearch = q ? name.startsWith(q) : true;
        const matchesCategory = cat ? category === cat : true;
        const matchesDietary = diet ? dietary === diet : true;
        return matchesSearch && matchesCategory && matchesDietary;
      });

      const sorters = {
        'name-asc': (a,b) => a.dataset.name.localeCompare(b.dataset.name),
        'name-desc': (a,b) => b.dataset.name.localeCompare(a.dataset.name),
        'price-asc': (a,b) => Number(a.dataset.price) - Number(b.dataset.price),
        'price-desc': (a,b) => Number(b.dataset.price) - Number(a.dataset.price),
      };
      if (sorters[sort]) filtered.sort(sorters[sort]);

      const grid = document.querySelector('.grid');
      grid.innerHTML = '';
      filtered.forEach(card => grid.appendChild(card));
    }

    searchBox.addEventListener('input', applyFilters);
    categoryFilter.addEventListener('change', applyFilters);
    dietaryFilter.addEventListener('change', applyFilters);
    sortSelect.addEventListener('change', applyFilters);
    resetBtn.addEventListener('click', () => {
      searchBox.value = '';
      categoryFilter.value = '';
      dietaryFilter.value = '';
      sortSelect.value = 'name-asc';
      applyFilters();
    });

    applyFilters();

    // Quantity controls
    document.querySelectorAll('.qty-control').forEach(ctrl => {
      const input = ctrl.querySelector('.qty-input');
      const max = parseInt(ctrl.dataset.max || '5', 10);
      ctrl.addEventListener('click', (e) => {
        const btn = e.target.closest('.qty-btn');
        if (!btn) return;
        const step = Number(btn.dataset.step || 0);
        let val = parseInt(input.value || '1', 10);
        val = isNaN(val) ? 1 : val;
        val = Math.min(max, Math.max(1, val + step));
        input.value = val;
      });
    });

    // Favorites toggle
    document.querySelectorAll('.fav-btn').forEach(btn => {
      btn.addEventListener('click', async (e) => {
        e.preventDefault();
        const pid = btn.dataset.productId;
        try {
          const resp = await fetch(`/favorites/${pid}/toggle`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ action: 'toggle' })
          });
          const data = await resp.json();
          if (data && data.success) {
            if (data.favorited) {
              btn.classList.add('active');
            } else {
              btn.classList.remove('active');
            }
          }
        } catch (err) {
          console.error('fav toggle error', err);
        }
      });
    });

    // Pretty delete account confirm
    const delForms = Array.from(document.querySelectorAll('.delete-account-form'));
    if (delForms.length) {
      const mask = document.createElement('div');
      mask.className = 'modal-mask';
      mask.innerHTML = `
        <div class="modal">
          <h4>Delete account?</h4>
          <p>This will mark your account as deleted and sign you out.</p>
          <div class="modal-actions">
            <button type="button" class="btn-ghost" id="delCancel">Cancel</button>
            <button type="button" class="btn-danger" id="delConfirm">Delete</button>
          </div>
        </div>`;
      document.body.appendChild(mask);
      let activeForm = null;
      const closeModal = () => { mask.style.display = 'none'; activeForm = null; };
      delForms.forEach(f => f.addEventListener('submit', (e) => { e.preventDefault(); activeForm = f; mask.style.display = 'flex'; }));
      mask.querySelector('#delCancel').addEventListener('click', closeModal);
      mask.querySelector('#delConfirm').addEventListener('click', () => { if (activeForm) activeForm.submit(); closeModal(); });
      mask.addEventListener('click', (e) => { if (e.target === mask) closeModal(); });
    }

  })();
</script>
